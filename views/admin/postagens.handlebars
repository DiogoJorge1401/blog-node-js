<h2>Lista de Postagens:</h2>
<hr>
<a href='/postagens/add'><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data:{{data}}</small><br>
            <small>Categoria:{{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}">
                <button class="btn btn-success mt-2">
                    Editar Postagem
                </button>
            </a>
            <form action="/postagens/deletar" method="post" style="display:inline">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Postagem</button>
            </form>
        </div>
    </div>

{{else}}
    <p class='mt-4'>Nehuma postagem registrada</p>

{{/each}}